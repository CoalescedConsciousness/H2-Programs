                <td>
                    @Html.DisplayFor(modelItem => Model.Contact[i].Email)
                    @Html.HiddenFor(model => model.Contact[i].Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Contact[i].Phone)
                    @Html.HiddenFor(model => model.Contact[i].Phone)
                </td>
                <td>
                   @* @using System.Globalization
                        @{
                            CultureInfo test = new CultureInfo("en-US");
